@startuml Messages

' !include <material7.4.47/all.puml>

' ' Shared helper to render a colored MDI sprite with a bold label
' !unquoted function $MdiMsgLine($icon, $color, $label, $txt, $scale="1")
'   !return $MdiSprite($icon, $color, $scale) + " <b>" + $label + "</b> <<" + $txt + ">>"
' !endfunction

' ' Shared helper for status-style messages (no chevrons around text)
' !unquoted function $MdiStatusLine($icon, $color, $label, $txt, $scale="1")
'   !return $MdiSprite($icon, $color, $scale) + " <b>" + $label + "</b> " + $txt
' !endfunction

' =========================================
' HTTP METHODS
' =========================================
!function $HTTP_GET($txt)
  !return $MdiMsgLine(mdiArrowRight, $Blue5, "GET", $txt)
!endfunction

!function $HTTP_POST($txt)
  !return $MdiMsgLine(mdiArrowDownBold, $Green5, "POST", $txt)
!endfunction

!function $HTTP_PUT($txt)
  !return $MdiMsgLine(mdiArrowUpBold, $Orange5, "PUT", $txt)
!endfunction

!function $HTTP_DELETE($txt)
  !return $MdiMsgLine(mdiDelete, $Red5, "DELETE", $txt)
!endfunction

!function $HTTP_PATCH($txt)
  !return $MdiMsgLine(mdiWrench, $Purple5, "PATCH", $txt)
!endfunction

' =========================================
' HTTP RESPONSES
' =========================================
!function $HTTP_200($txt="OK")
  !return $MdiStatusLine(mdiCheckCircle, $Olive5, "200", $txt)
!endfunction

!function $HTTP_201($txt="Created")
  !return $MdiStatusLine(mdiCheckDecagram, $Olive5, "201", $txt)
!endfunction

!function $HTTP_400($txt="Bad Request")
  !return $MdiStatusLine(mdiAlertCircle, $Orange5, "400", $txt)
!endfunction

!function $HTTP_401($txt="Unauthorized")
  !return $MdiStatusLine(mdiLock, $Crimson5, "401", $txt)
!endfunction

!function $HTTP_403($txt="Forbidden")
  !return $MdiStatusLine(mdiShieldLock, $Crimson5, "403", $txt)
!endfunction

!function $HTTP_404($txt="Not Found")
  !return $MdiStatusLine(mdiMagnifyClose, $Orange5, "404", $txt)
!endfunction

!function $HTTP_500($txt="Internal Server Error")
  !return $MdiStatusLine(mdiAlertOctagon, $Red5, "500", $txt)
!endfunction

!function $HTTP_503($txt="Service Unavailable")
  !return $MdiStatusLine(mdiAlertDecagram, $Red5, "503", $txt)
!endfunction

